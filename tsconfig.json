{
  "compilerOptions": {
    
    "target": "es5", 
     "experimentalDecorators": true,                   
     "emitDecoratorMetadata": true,                   
    "module": "commonjs", 
    "baseUrl": "./src",
    "resolveJsonModule": true,                                 
    "paths": {
      "@modules/*" : ["modules/*"],
      "@config/*" : ["config/*"],
      "@shared/*" : ["shared/*"],
      "@errors/*" : ["errors/*"],
      "@utils/*" : ["utils/*"]
    },                                     
   
    "outDir": "./dist", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true 
  }
}